<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".FullscreenActivity">

  <ImageView
    android:visibility="visible"
    android:id="@+id/ivBackground"
    android:src="@drawable/adlink916"
    android:scaleType="fitXY"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  </ImageView>

  <FrameLayout
    android:id="@+id/AvatarLayout"
    android:layout_marginTop="100dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/llResponse"
    >

  </FrameLayout>


  <Button
    android:text="New Session"
    android:id="@+id/btnNewSession"
    android:layout_above="@id/llResponse"
    android:layout_alignParentLeft="true"
    android:layout_width="wrap_content"
    android:layout_height="40dp">
  </Button>
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_above="@id/llResponse"
    android:layout_alignParentRight="true">

    <Button
      android:text="Menu"
      android:layout_marginLeft="2dp"
      android:id="@+id/btnChatControl"
      android:layout_width="wrap_content"
      android:layout_height="40dp">
    </Button>

  </LinearLayout>


  <LinearLayout
    android:id="@+id/llResponse"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BFFF">
    <com.google.android.material.button.MaterialButtonToggleGroup
      android:id="@+id/mbtgLang"
      android:gravity="center_horizontal"
      app:singleSelection="true"
      app:selectionRequired="true"
      android:orientation="horizontal"
      app:checkedButton="@+id/btnLang0"
      android:layout_above="@id/llResponse"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <com.google.android.material.button.MaterialButton
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/btnLang0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EN"
        />
      <com.google.android.material.button.MaterialButton
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/btnLang1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CH"
        />
      <com.google.android.material.button.MaterialButton
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/btnLang2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="FR"
        />
      <com.google.android.material.button.MaterialButton
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/btnLang3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GE"
        />

      <com.google.android.material.button.MaterialButton
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/btnLangMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        />

    </com.google.android.material.button.MaterialButtonToggleGroup>
    <TextView
      android:id="@+id/tvResponse"
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:scrollbars = "vertical"
      android:textSize="14sp"
      android:padding="5dp"
      >
    </TextView>
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <EditText
        android:id="@+id/etInput"
        android:layout_weight="0.8"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_height="wrap_content">

      </EditText>
      <ProgressBar
        android:id="@+id/pbLoading"
        android:visibility="gone"
        android:layout_width="44dp"
        android:layout_height="44dp">

      </ProgressBar>
      <ImageButton
        android:id="@+id/btnSubmit"
        android:src="@drawable/baseline_send_24"
        android:background="#00000000"
        android:layout_width="44dp"
        android:layout_height="44dp">
      </ImageButton>

      <ImageButton
        android:id="@+id/btnStop"
        android:background="#00000000"
        android:src="@drawable/baseline_cancel_24"
        android:visibility="gone"
        android:layout_width="44dp"
        android:layout_height="44dp">

      </ImageButton>
    </LinearLayout>
  </LinearLayout>

  <ImageButton
    android:id="@+id/btnMore"
    android:background="#00000000"
    android:src="@drawable/baseline_more_horiz_24"
    android:layout_alignParentRight="true"
    android:layout_width="75dp"
    android:layout_height="75dp">

  </ImageButton>

  <ImageButton
    android:id="@+id/btnMoreLeft"
    android:background="#00000000"
    android:src="@drawable/baseline_more_horiz_24"
    android:layout_alignParentLeft="true"
    android:layout_width="75dp"
    android:layout_height="75dp">

  </ImageButton>
</RelativeLayout>
